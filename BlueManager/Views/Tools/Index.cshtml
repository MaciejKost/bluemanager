@model IEnumerable<BlueManager.Models.Tool>

@{
    ViewBag.Title = "Narzędzia";
}
<h2>Głowice</h2>

<p>
    <a asp-action="Create">Nowy</a>
</p>

<table id="table-tools" class="table table-striped table-bordered table-hover table-sm cellspacing="0"">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MacAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ToolName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MacAddress)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>


