@model BlueManager.Models.Tool

@{
    ViewData["Title"] = "Nowe narzędzie";
}

<h1>Nowe narzędzie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="ToolName" class="control-label"></label>
                <input asp-for="ToolName" class="form-control" />
                <span asp-validation-for="ToolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MacAddress" class="control-label"></label>
                <input asp-for="MacAddress" class="form-control" style="text-transform:uppercase;" />
                <span asp-validation-for="MacAddress" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
