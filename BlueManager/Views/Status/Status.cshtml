@model List<HubData>
@using Microsoft.Extensions.Diagnostics.HealthChecks
@{
    ViewData["Title"] = "Status";
    Layout = null;
}

<h6 class="text-center">Status połączeń</h6>

<ul class="list-group ">
    <b class="nav-item"> Nieaktywne: </b>
    @foreach (var item in Model)
    {
    @if (@item.HealthStatus == "Degraded")
        {
    <li class="text-warning mx-3">
        @item.LocationName (@item.IpAddress) : @item.HealthStatus.ToString();
    </li>
        }
    }
</ul>
<br />

<ul class="list-group ">
    <b class="nav-item"> Błąd połączenia: </b>
    @foreach (var item in Model)
    {
    @if (@item.HealthStatus == "Unhealthy")
        {
    <li class="text-danger mx-3">
        @item.LocationName (@item.IpAddress) : @item.HealthStatus.ToString();
    </li>
        }
    }
</ul>
<br />

<ul class="list-group">
    <b class="nav-item"> Połączone: </b>
    @foreach (var item in Model)
    {
    @if (@item.HealthStatus == "Healthy")
        {
    <li class="text-success mx-3">
        @item.LocationName (@item.IpAddress) : @item.HealthStatus.ToString()
    </li>
        }
    }
</ul>


