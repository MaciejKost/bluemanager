@model List<ToolLastLocation>

@{
    ViewBag.Title = "Lokalizacja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="table-location-short" class="table table-striped table-bordered table-hover table-sm cellspacing=" 0"">
    <thead>
        <tr>
            <th>Numer głowicy</th>
            <th>Lokalizacja</th>
            <th>Czas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Tool.ToolName) </td>
                <td> @Html.DisplayFor(modelItem => item.Hub.LocationName) </td>
                <td> @Html.DisplayFor(modelItem => item.LocationTimestamp) </td>
            </tr>

        }
    </tbody>
</table>


@section scripts {
    <!-- DataTables -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#table-location-short").DataTable({
                "responsive": true,
                "autoWidth": false,
                "order": [[2, "desc"]],
                "language": {
                    "sUrl": "../lib/bootstrap/dist/js/Polish.json"
                }
            });
        });
    </script>
}
