@model List<BlueManagerPlatform.Models.Tool>

    @{
    ViewBag.Title = "Lokalizacja";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @*<meta http-equiv="refresh" content="5">*@


    <div class="container mb-3 mt-3">
        <table id="example" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Nazwa narzędzia</th>
                    <th>Lokalizacja</th>
                    <th>Adres MAC</th>
                    <th>Czas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.ToolName)
                    </td>
                    @*
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.MacAddress)
                    </td>
                    @*
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>*@
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    @*
                    <th>Nazwa</th>*@
                    <th>Nazwa narzędzia</th>
                    @*
                    <th>Lokalizacja</th>*@
                    <th>Adres MAC</th>
                    @*
                    <th>Czas</th>*@
                </tr>
            </tfoot>
        </table>

    </div>

    @section scripts {

    
    @*<script src="~/lib/bootstrap/dist/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-table.min.js"></script>*@

    <script src="~/lib/bootstrap/dist/js/jquery.dataTables.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                aoColumnDefs: [
                    { "aTargets": [4], "bSortable": true },
                ],
                "language": {
                    "sUrl": "lib/bootstrap/dist/js/Polish.json"
                }
            });
        });
    </script>

    }
